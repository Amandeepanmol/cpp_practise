class Solution {
public:
    bool checkEven(int n)
    {
        int digit = 0;
        while(n != 0)
        {
            digit++;
            n = n/10;
        }
        return digit % 2 == 0 ? 1 : 0;
    }
    int findNumbers(vector<int>& nums) {
        
        int n = nums.size();
        int cnt = 0;

        for(int i = 0; i<n; i++)
        {
            if(checkEven(nums[i]))
            {
                cnt++;
            }
        }
        return cnt;
    }
};
